    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb + clang) Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/out/build/Clang 21.1.7 x86_64-w64-windows-gnu (ucrt64)/pde_tests.exe",
            "args": [],
            "cwd": "${workspaceRoot}",
			"preLaunchTask": "CMake: Build Clang",
            "setupCommands": []
        },
        {
            "name": "(gdb + clang) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/out/build/Clang 21.1.7 x86_64-w64-windows-gnu (ucrt64)/pde_tests.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "preLaunchTask": "CMake: Build Clang",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": ".gdbinit for Eigen pretty-printing",
                    "text": "source ${workspaceRoot}/.gdbinit",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "name": "(gdb + gcc) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/out/build/GCC 15.2.0 x86_64-w64-mingw32/pde_tests.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/mingw64/bin/gdb.exe",
            "preLaunchTask": "CMake: Build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}